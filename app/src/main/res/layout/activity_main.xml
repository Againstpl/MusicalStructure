        android:src="@drawable/album3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:src="@drawable/album4" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:src="@drawable/album5" />

    <ImageView
        android:layout_width="match_parent"
